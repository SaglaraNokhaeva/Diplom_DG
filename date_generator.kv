WindowManager:
    StudyPeriodsWindow:
    WeekdaysWindow:
    PublicHolidaysWindow:
    ResultWindow:

<StudyPeriodsWindow>:
    name: "periods"

    MDBoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing:30
        MDLabel:
            text: "Учебный период и каникулы"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            height:50


        MDGridLayout:
            cols: 2
            padding: 50
            spacing:30


            MDRaisedButton:
                id: btn0
                text: "Выбрать  даты начала и окончания учебного года"
                md_bg_color:60/255, 174/255, 60/255, 122/255
                halign: 'center'
                on_release: root.input_study_period('btn0')

            MDLabel:
                id: date1
                text: "гггг-мм-дд. - гггг-мм-дд."
                halign: 'center'




            MDRaisedButton:

                id: btn1
                text: "Выбрать  даты начала и окончания каникул"
                halign: 'center'
                md_bg_color:60/255, 174/255, 60/255, 122/255
                on_release: root.input_study_period('btn1')

            MDLabel:
                id: date2
                text: "гггг-мм-дд. - гггг-мм-дд."
                halign: 'center'

            MDRaisedButton:

                id: btn2
                text: "Выбрать  даты начала и окончания каникул"
                halign: 'center'
                md_bg_color:60/255, 174/255, 60/255, 122/255
                on_release: root.input_study_period('btn2')

            MDLabel:
                id: date3
                text: "гггг-мм-дд. - гггг-мм-дд."
                halign: 'center'

            MDRaisedButton:

                id: btn3
                text: "Выбрать  даты начала и окончания каникул"
                halign: 'center'
                md_bg_color:60/255, 174/255, 60/255, 122/255
                on_release: root.input_study_period('btn3')

            MDLabel:
                id: date4
                text: "гггг-мм-дд. - гггг-мм-дд."
                halign: 'center'

        MDRaisedButton:
            text: "Вперёд"
            on_release:
                app.root.current = "weekdays"
                root.manager.transition.direction = "left"
            font_size: 40
            md_bg_color:91/255, 59/255, 173/255, 257/255
            pos_hint: {"center_x":.5, "center_y":.5}
            halign: 'center'







<WeekdaysWindow>:
    name: "weekdays"
    MDBoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing:30
        pos_hint: {'center_y':0.5}

        MDLabel:
            text: "Количество уроков"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            height:50



        MDGridLayout:
            cols: 2

            MDLabel:
                text: "Понедельник"
                halign: 'center'

            TextInput:
                id:monday_count
                text: "0"
                hint_text: "Введите количество уроков"


            MDLabel:
                text: "Вторник"
                halign: 'center'


            TextInput:
                id:tuesday_count
                text: "0"
                hint_text: "Введите количество уроков"

            MDLabel:
                text: "Среда"
                halign: 'center'

            TextInput:
                id:wednesday_count
                text: "0"
                hint_text: "Введите количество уроков"

            MDLabel:
                text: "Четверг"
                halign: 'center'

            TextInput:
                id:thursday_count
                text: "0"
                hint_text: "Введите количество уроков"

            MDLabel:
                text: "Пятница"
                halign: 'center'


            TextInput:
                id:friday_count
                text: "0"
                hint_text: "Введите количество уроков"



            MDLabel:
                text: "Суббота"
                halign: 'center'

            TextInput:
                id:saturday_count
                text: "0"
                hint_text: "Введите количество уроков"


        MDBoxLayout:
            padding: 50
            spacing:30
            pos_hint: {'center_x':0.75}

            MDRaisedButton:
                text: "Назад"
                md_bg_color:91/255, 59/255, 173/255, 257/255
                font_size: 40
                pos_hint: {"center_x":.5}

                on_release:
                    app.root.current = "periods"
                    root.manager.transition.direction = "right"
                halign: 'center'
                size_hint_y: None
                height:50
            MDRaisedButton:
                text: "Вперёд"
                md_bg_color:91/255, 59/255, 173/255, 257/255
                font_size: 40
                pos_hint: {"center_x":.5}
                on_release:
                    app.root.current = "publicHolidays"
                    root.manager.transition.direction = "left"
                halign: 'center'
                size_hint_y: None
                height:50
                on_release: root.input_working_days_of_the_week()




<PublicHolidaysWindow>:
    name: "publicHolidays"

    MDBoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing:30


        MDLabel:
            text: "Праздничные дни"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            height:50


        MDBoxLayout:
            orientation: 'vertical'
            padding: 50
            spacing:30

            MDRaisedButton:
                id: btn1
                md_bg_color:60/255, 174/255, 60/255, 122/255
                pos_hint: {"center_x":.5, "center_y":.5}
                text: "Выбрать дату"
                halign: 'center'
                on_release: root.input_public_holidays()

            ScrollView:
            MDTextField:
                id: dates
                multiline: True
                halign: 'center'
                size_hint_y: None
                height:50


        MDBoxLayout:
            padding: 50
            spacing:30
            pos_hint: {'center_x':0.75}

            MDRaisedButton:
                text: "Назад"
                on_release:
                    app.root.current = "weekdays"
                    root.manager.transition.direction = "right"
                md_bg_color:91/255, 59/255, 173/255, 257/255
                font_size: 40
                pos_hint: {"center_x":.5}

            MDRaisedButton:
                text: "Вперёд"
                on_release:
                    app.root.current = "result"
                    root.manager.transition.direction = "left"
                md_bg_color:91/255, 59/255, 173/255, 257/255
                font_size: 40
                pos_hint: {"center_x":.5}




<ResultWindow>:
    name: "result"
    MDBoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing:30


        MDLabel:
            text: "Даты уроков:"
            halign: 'center'
            size_hint_y: None
            height:50
        MDRaisedButton:
            text: "Вывод результатов"
            font_size: 30
            size: 100, 100
            size_hint: None, None
            md_bg_color:60/255, 174/255, 60/255, 122/255
            pos_hint: {"center_x":.5}
            on_release: root.output_of_results()

        ScrollView:
            MDTextField:
                id: dates
                multiline: True
                halign: 'center'
                size_hint_y: None
                height:50

        MDBoxLayout:
            padding: 50
            spacing:30
            pos_hint: {'center_x':0.7}

            MDRaisedButton:
                text: "Назад"
                on_release:
                    app.root.current = "publicHolidays"
                    root.manager.transition.direction = "right"
                md_bg_color:91/255, 59/255, 173/255, 257/255
                font_size: 40
                pos_hint: {"center_x":.5}


            MDRaisedButton:
                text: "Сохранить"
                on_release:root.save_to_file()
                md_bg_color:91/255, 59/255, 173/255, 257/255
                font_size: 40
                pos_hint: {"center_x":.5}

            MDRaisedButton:
                text: "Выход"
                on_release: root.close_application()
                md_bg_color:91/255, 59/255, 173/255, 257/255
                font_size: 40
                pos_hint: {"center_x":.5}
