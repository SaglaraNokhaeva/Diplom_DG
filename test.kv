WindowManager:
    StudyPeriodsWindow:
    WeekdaysWindow:
    PublicHolidaysWindow:
    ResultWindow:

<StudyPeriodsWindow>:

    date_label1: date_label1

    date_label2: date_label2
    date_label3: date_label3
    date_label4: date_label4

    name: "periods"
    MDBoxLayout:
        orientation: 'vertical'
        MDLabel:
            text: "Введите учебный период и каникулы"
            halign: 'center'
            size_hint_y: None
            height:50

        MDGridLayout:
            cols: 2

            MDRaisedButton:

                id: btn0
                text: "Выберите даты начала и окончания учебного года"
                halign: 'center'
                on_release: root.show_date_picker()

            MDLabel:
                id: date_label1
                text: "гггг-мм-дд. - гггг-мм-дд."
                halign: 'center'
                on_release: root.show_date_picker()


            MDRaisedButton:

                id: btn1
                text: "Выберите даты начала и окончания каникул"
                halign: 'center'
                on_release: root.show_date_picker()

            MDLabel:
                id: date_label2
                text: "гггг-мм-дд. - гггг-мм-дд."
                halign: 'center'

            MDRaisedButton:

                id: btn2
                text: "Выберите даты начала и окончания каникул"
                halign: 'center'
                on_release: root.show_date_picker()

            MDLabel:
                id: date_label3
                text: "гггг-мм-дд. - гггг-мм-дд."
                halign: 'center'

            MDRaisedButton:

                id: btn3
                text: "Выберите даты начала и окончания каникул"
                halign: 'center'
                on_release: root.show_date_picker()

            MDLabel:
                id: date_label4
                text: "гггг-мм-дд. - гггг-мм-дд."
                halign: 'center'

        Button:
            text: "Вперёд"
            on_release:
                app.root.current = "weekdays"
                root.manager.transition.direction = "left"
            halign: 'center'
            size_hint_y: None
            height:50





<WeekdaysWindow>:
    name: "weekdays"
    MDBoxLayout:
        orientation: 'vertical'
        MDLabel:
            text: "Дни недели"
            halign: 'center'
            size_hint_y: None
            height:50


        MDGridLayout:
            cols: 2

            MDLabel:
                text: "Понедельник"
                halign: 'center'

            MDTextField:
                id:monday_count
                hint_text: "Введите количество уроков"


            MDLabel:
                text: "Вторник"
                halign: 'center'


            MDTextField:
                id:tuesday_count
                hint_text: "Введите количество уроков"

            MDLabel:
                text: "Среда"
                halign: 'center'

            MDTextField:
                id:wednesday_count
                hint_text: "Введите количество уроков"

            MDLabel:
                text: "Четверг"
                halign: 'center'

            MDTextField:
                id:thursday_count
                hint_text: "Введите количество уроков"

            MDLabel:
                text: "Пятница"
                halign: 'center'


            MDTextField:
                id:friday _count
                hint_text: "Введите количество уроков"



            MDLabel:
                text: "Суббота"
                halign: 'center'

            MDTextField:
                id:saturday _count
                hint_text: "Введите количество уроков"


        MDBoxLayout:
            Button:
                text: "Назад"
                on_release:
                    app.root.current = "periods"
                    root.manager.transition.direction = "right"
                halign: 'center'
                size_hint_y: None
                height:50
            Button:
                text: "Вперёд"
                on_release:
                    app.root.current = "publicHolidays"
                    root.manager.transition.direction = "left"
                halign: 'center'
                size_hint_y: None
                height:50









